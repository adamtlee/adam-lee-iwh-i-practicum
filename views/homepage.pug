doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        script(src="https://cdn.tailwindcss.com")
        link(rel="stylesheet", href="/css/style.css")
    body(class="p-8 bg-gray-50")
        h1(class="text-3xl font-bold mb-8 text-gray-800") Home
        
        // Dogs Section
        div(class="mb-12")
            div(class="flex justify-between items-center mb-4")
                h2(class="text-2xl font-bold text-gray-800") Dogs
                a(href="/update-cobj" class="text-blue-600 hover:text-blue-800 underline") Add to this table
            
            if dogs && dogs.length > 0
                div(class="overflow-x-auto")
                    table(class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md")
                        thead(class="bg-gray-100")
                            tr
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider border-b") ID
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider border-b") Name
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider border-b") Breed
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider border-b") Age
                        tbody(class="divide-y divide-gray-200")
                            each dog in dogs
                                tr(class="hover:bg-gray-50 transition-colors")
                                    td(class="px-6 py-4 whitespace-nowrap text-sm text-gray-900")= dog.id
                                    td(class="px-6 py-4 whitespace-nowrap text-sm text-gray-900")= dog.properties.name || '-'
                                    td(class="px-6 py-4 whitespace-nowrap text-sm text-gray-600")= dog.properties.breed || '-'
                                    td(class="px-6 py-4 whitespace-nowrap text-sm text-gray-600")= dog.properties.age || '-'
            else
                p(class="text-gray-600") No dogs found.

